name: ⏰ Send Weekly Warm Outreach Emails

on:
  schedule:
    # Every Friday at 14:30 UTC = 8 PM IST (UTC+5:30)
    - cron: "30 14 * * 5"
  workflow_dispatch:  # Optional: allow manual trigger

jobs:
  send-emails:
    runs-on: ubuntu-latest

    steps:
      - name: 📥 Checkout repo
        uses: actions/checkout@v3

      - name: 🐍 Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: 📦 Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pandas openpyxl

      - name: 🔐 Set environment variables
        run: |
          echo "EMAIL_ADDRESS=${{ secrets.EMAIL_ADDRESS }}" >> $GITHUB_ENV
          echo "EMAIL_PASSWORD=${{ secrets.EMAIL_PASSWORD }}" >> $GITHUB_ENV

      - name: 🚀 Run Email Job
        run: |
          python send_mails.py
        env:
          SENDER_EMAIL: ${{ secrets.EMAIL_ADDRESS }}
          SENDER_PASSWORD: ${{ secrets.EMAIL_PASSWORD }}
